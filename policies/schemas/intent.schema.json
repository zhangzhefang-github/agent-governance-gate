{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agent-governance-gate/schemas/intent.schema.json",
  "title": "Intent",
  "description": "Represents a recognized user intent from the intent recognition system",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The intent identifier (e.g., 'order_status_query')"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "default": 1.0,
      "description": "Confidence score from intent recognition (0.0 to 1.0)"
    },
    "parameters": {
      "type": "object",
      "description": "Optional parameters extracted from the user input",
      "additionalProperties": true
    }
  },
  "examples": [
    {
      "name": "order_status_query",
      "confidence": 0.95,
      "parameters": {
        "order_id": "12345",
        "user_input": "Where is my order?"
      }
    }
  ]
}
